<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #293240; -fx-border-color: #0d1a26; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Real-time Chord Recognition" textFill="#ffffffcf">
         <font>
            <Font size="29.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <effect>
            <Bloom threshold="0.31" />
         </effect>
      </Label>
      <Separator prefWidth="200.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Separator>
      <Label text="Chord Output" textFill="#2ab8b0c2">
         <font>
            <Font name="Lemon Regular" size="36.0" />
         </font>
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin>
         <effect>
            <Bloom threshold="0.6" />
         </effect>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="recordButton" maxWidth="-Infinity" mnemonicParsing="false" prefWidth="300.0" styleClass="buttonMenu" text="Record" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" right="15.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="stopButton" maxWidth="-Infinity" mnemonicParsing="false" prefWidth="300.0" styleClass="buttonMenu" text="Stop" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" right="15.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
